@implements IDisposable
@inherits LayoutComponentBase
@using Babel.WebUI.Services
@using Babel.WebUI.Components
@inject IThemeService ThemeService

<MudThemeProvider @ref="_mudThemeProvider" 
                   Theme="@_currentMudTheme"
                   @bind-IsDarkMode="@_isDarkMode" />

<MudLayout>
    <MudAppBar Elevation="1" Dense="true">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudIcon Icon="@Icons.Material.Filled.AutoStories" Class="mr-2" />
        <MudText Typo="Typo.h6" Class="ml-1">Babel</MudText>
        <MudSpacer />

        <ServiceStatusIndicator />

        <ThemeSelector />
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen"
               ClipMode="DrawerClipMode.Always"
               Elevation="2"
               Variant="@DrawerVariant.Mini"
               OpenMiniOnHover="true">
        <NavMenu />
    </MudDrawer>

    <MudMainContent Class="pt-16 px-4">
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="my-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;
    private bool _isDarkMode = false;
    private MudThemeProvider? _mudThemeProvider;
    private MudTheme _currentMudTheme = new MudTheme();

    protected override async Task OnInitializedAsync()
    {
        ThemeService.OnThemeChanged += HandleThemeChanged;
        await ThemeService.LoadThemePreferenceAsync();
        UpdateTheme();
    }

    public void Dispose()
    {
        ThemeService.OnThemeChanged -= HandleThemeChanged;
    }

    private void HandleThemeChanged()
    {
        UpdateTheme();
    }

    private void UpdateTheme()
    {
        _currentMudTheme = ThemeService.CurrentMudTheme;
        _isDarkMode = ThemeService.IsDarkMode;
        InvokeAsync(StateHasChanged);
    }

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }
}
